#:set filterScreen 'Filter'
#:set menuScreen 'Menu'
#:set trackerScreen 'Tracker'

<MyLabel>:
    font_size: 36
    size_hint_y: None
    height: self.texture_size[1]
<MyH1Label>:
    font_size: 24
    size_hint_y: None
<MyH2Label>:
    halign: 'left'
    font_size: 16
    text_size: self.size
<MyButton>:
    height: self.texture_size[1]*2
    size_hint_y: None
    font_size: 16
<MyLogLabel>:
    color: 1, 1, 1, 1
    font_size: 12
    text_size: self.width, None
    halign: 'left'
    valign: 'top'
    size_hint_y: None
    height: 14